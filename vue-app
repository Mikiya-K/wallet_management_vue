server {
    listen 16002;
    server_name 168.100.174.146;

    # æ€§èƒ½ä¼˜åŒ–
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 300;
    keepalive_requests 1000;

    # å¯ç”¨ Gzip å‹ç¼©
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    # æ–‡ä»¶ç¼“å­˜ä¼˜åŒ–
    open_file_cache max=2000 inactive=20s;
    open_file_cache_valid 30s;
    open_file_cache_min_uses 2;
    open_file_cache_errors off;

    # Vue åº”ç”¨é™æ€æ–‡ä»¶æœåŠ¡
    root /root/workspace/wallet_management_vue/dist;
    index index.html;

    # å¤„ç† Vue Router çš„ history æ¨¡å¼
    location / {
        try_files $uri $uri/ /index.html;
    }

    # API åå‘ä»£ç†
    location /api/ {
        proxy_pass http://localhost:16003; # åç«¯APIåœ°å€
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # ğŸ”¥ æ·»åŠ è¿™äº›è¶…æ—¶è®¾ç½®ï¼ˆå…³é”®ï¼ï¼‰
        proxy_connect_timeout       300s;   # è¿æ¥åç«¯è¶…æ—¶
        proxy_send_timeout          300s;   # å‘é€è¯·æ±‚åˆ°åç«¯è¶…æ—¶
        proxy_read_timeout          300s;   # è¯»å–åç«¯å“åº”è¶…æ—¶ï¼ˆæœ€é‡è¦ï¼ï¼‰
        proxy_buffering             off;    # å…³é—­ç¼“å†²ï¼Œå®æ—¶ä¼ è¾“å“åº”

	# ä»£ç†ç¼“å­˜è®¾ç½®
	#proxy_cache api_cache;
        #proxy_cache_key "$scheme$request_method$host$request_uri";
        #proxy_cache_valid 200 302 10m;
        #proxy_cache_valid 404 1m;
        #proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
    }

    # é™æ€èµ„æºç¼“å­˜
    location ~* \.(?:jpg|jpeg|gif|png|ico|svg|css|js)$ {
        expires 1y;
	access_log off;
        add_header Cache-Control "public";
	add_header Access-Control-Allow-Origin "*";
    }

    # å®‰å…¨å¤´éƒ¨
    #add_header X-Frame-Options "SAMEORIGIN" always;
    #add_header X-Content-Type-Options "nosniff" always;
    #add_header X-XSS-Protection "1; mode=block" always;
    #add_header Referrer-Policy "no-referrer-when-downgrade" always;
    #add_header Content-Security-Policy "default-src 'self'"

    # é”™è¯¯é¡µé¢
    #error_page 400 401 402 403 404 405 406 407 408 409 410 411 412 413 414 415 416 417 500 501 502 503 504 =200 /error.html;
    #location = /error.html {
    #    root /workspace/wallet_management_vue/dist;
    #    internal;
    #}

    # ç¦æ­¢è®¿é—®éšè—æ–‡ä»¶
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # ç¦æ­¢è®¿é—®æ•æ„Ÿæ–‡ä»¶
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    # å®¢æˆ·ç«¯é™åˆ¶
    client_max_body_size 10m;
    client_body_buffer_size 128k;
    client_header_buffer_size 1k;
    large_client_header_buffers 4 8k;

    # æ—¥å¿—ä¼˜åŒ–
    access_log /var/log/nginx/access.log combined buffer=32k flush=5m;
    error_log /var/log/nginx/error.log warn;

    # Nginx çŠ¶æ€ç›‘æ§
    location /nginx_status {
    	stub_status on;
    	access_log off;
    	allow 127.0.0.1;
